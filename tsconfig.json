{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@server-mocks": ["packages/server-mocks/src/index.ts"],
      "@adhese/sdk": ["packages/sdk/src/adheseSdk.ts"],
      "@adhese/sdk-react": ["packages/sdk-react/src/sdkReact.ts"],
      "@adhese/sdk-devtools": ["packages/sdk-devtools/src/sdkDevtools.ts"],
      "@adhese/sdk-gambit": ["packages/sdk-gambit/src/gambit.ts"],
      "@adhese/sdk-shared": ["packages/sdk-shared/src/index.ts"],
      "@adhese/sdk-shared/validators": ["packages/sdk-shared/src/validators.ts"],
      "@adhese/sdk-safe-frame": ["packages/sdk-safe-frame/src/safeFrame.ts"],
      "@adhese/sdk-stack-slots": ["packages/sdk-stack-slots/src/stackSlots.ts"],
      "@adhese/sdk-user-sync": ["packages/sdk-user-sync/src/userSync.ts"],
      "@adhese/sdk-lite": ["packages/sdk-lite/src/sdkLite.ts"],
      "@adhese/sdk-vast-url": ["packages/sdk-vast-url/src/vastUrl.ts"]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "vitest"
    ],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["packages/**/*", "apps/**/*", "scripts/**/*"],
  "exclude": ["node_modules"]
}
